<div class="jumbotron"><h1>> git choc init 🍫</h1>
<p class="lead">Create New Chocolateer 🍫</p></div>

<%= form_with(model: @post) do |form| %>
<table class="table">
  <tr>
  <td>
    <%= form.label :title, "Name", class: "form-label" %></td>
    <td>
    <%= form.text_field :title, class: "form-control" %></td>
  </tr>
  
  <tr>
  <td>
  <%= form.label :body, "Chocolates", class: "form-label" %></td>
  <td>
  <%= form.number_field :body, in: 1..100, step: 1, class: "form-control" %></td>
  </tr>

  <tr>
  <td></td>
  <td>
  <%= form.submit "New Chocolateer 🍫", class: "btn btn-primary" %></td></tr>
  </table>
<% end %>